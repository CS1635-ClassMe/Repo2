<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/discuss_background"
	android:orientation="vertical">

	<TextView
		android:id="@+id/postsTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="@color/muted"
        android:text="Posts:"
        android:textSize="20dp"
        />

	<ListView
		android:id="@+id/postsList"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:background="@color/discuss_list_background"
        />

	<TextView
		android:id="@+id/usersTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="@color/muted"
        android:text="Users:"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

	<ListView
		android:id="@+id/usersList"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:background="@color/discuss_list_background"
        />

	<TextView
		android:id="@+id/coursesTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="@color/muted"
        android:text="Courses:"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

	<ListView
		android:id="@+id/coursesList"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
        android:background="@color/discuss_list_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Can't find a course?"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            />

    <Button android:id="@+id/result_createnew"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@color/discuss_button"
        android:text="Create New"
        android:textColor="@color/button_text_color"
        android:textSize="22dp"
        android:layout_margin="10dp"
        />
    </LinearLayout>

</LinearLayout>