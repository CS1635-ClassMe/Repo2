<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Course"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp">
        <include layout="@layout/hr"/>
        </LinearLayout>
        <ListView android:id="@+id/results_list_active_course"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp">
        </ListView>
        <include layout="@layout/buck_result_bs_1"
            android:id="@+id/classRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr1"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archived Course"
            android:paddingTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp">
            <include layout="@layout/hr"/>
        </LinearLayout>
        <ListView android:id="@+id/results_list_archived_course"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp">
        </ListView>
        <include layout="@layout/buck_result_bs_2"
            android:id="@+id/classRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:paddingTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp">
            <include layout="@layout/hr"/>
        </LinearLayout>
        <ListView android:id="@+id/results_list_posts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="[ no results ]"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructors"
            android:paddingTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp">
            <include layout="@layout/hr"/>
        </LinearLayout>
        <ListView android:id="@+id/results_list_instructors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp">
        </ListView>
        <include layout="@layout/buck_result_bs_3"
            android:id="@+id/bs-row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members"
            android:paddingTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp">
            <include layout="@layout/hr"/>
        </LinearLayout>
        <ListView android:id="@+id/results_list_members"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp">
        </ListView>
        <include layout="@layout/member_row"
            android:id="@+id/bs-row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr1"/>

    </LinearLayout>


</ScrollView>