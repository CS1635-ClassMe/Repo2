<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/cal_single_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ EVENT TITLE ]"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/cal_single_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ EVENT DETAILS ] WOAOOA JOFIJO IDSFJOIFD JOIDFJJDFSI JOSDF lkjadf dafjkldfajdflk afd adfjklafds JFD."
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textStyle="italic"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/cal_single_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ DATE DUE ] 3/02/14"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" | "
            android:textSize="15dp"
            />

        <TextView android:id="@+id/cal_single_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ TIME DUE ] 2:00PM"
            android:textSize="15dp"
            />
    </LinearLayout>

</LinearLayout>