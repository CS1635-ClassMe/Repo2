<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView android:id="@+id/cal_view_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ EVENT TITLE ]"
        android:textSize="32dp"
        android:padding="15dp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/cal_view_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ EVENT DETAILS ] WOAOOA JOFIJO IDSFJOIFD JOIDFJJDFSI JOSDF lkjadf dafjkldfajdflk afd adfjklafds JFD."
        android:textSize="20dp"
        android:textStyle="italic"
        android:padding="15dp"
        />

    <TextView android:id="@+id/cal_view_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ DATE DUE ] 3/02/14"
        android:textSize="20dp"
        android:padding="15dp"
        />
    <TextView android:id="@+id/cal_view_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ TIME DUE ] 2:00PM"
        android:textSize="20dp"
        android:padding="15dp"
        />

    <TextView android:id="@+id/cal_view_creator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ CREATOR ] Jonathan Buck"
        android:textSize="15dp"
        android:padding="15dp"
        />

    <TextView android:id="@+id/cal_view_class"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[ CLASS ] <CS1550>"
        android:textSize="15dp"
        android:padding="15dp"
        />

</LinearLayout>