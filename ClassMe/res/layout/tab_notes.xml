<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
                android:background="@color/note_background"
                >

    <Button android:id="@+id/tab_notes_new"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/note_button"
        android:text="Upload Class Notes"
        android:textColor="@color/button_text_color"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>


    <include layout="@layout/list_notes"
        android:layout_below="@id/tab_notes_new"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        />

</RelativeLayout>